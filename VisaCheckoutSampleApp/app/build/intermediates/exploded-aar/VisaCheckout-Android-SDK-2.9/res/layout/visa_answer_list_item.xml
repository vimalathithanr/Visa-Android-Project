<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlAnswerChooser"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pl_hundred_forty_px">

    <View
        android:id="@+id/v_divider_start"
        style="@style/ChallengeQuestionDivider" />

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text="@string/tv_label_answer_list_item"
        android:textSize="@dimen/thirty_seven_px"
        android:layout_marginLeft="@dimen/layout_margin_left_right"
        android:textColor="@color/tv_title_color"
        android:layout_marginTop="@dimen/pl_forty_seven_px"
        android:layout_marginBottom="@dimen/pl_forty_seven_px"
        android:layout_below="@id/v_divider_start"/>

    <ImageView
        android:id="@+id/ivCheckMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/layout_margin_left_right"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/toggle_on"
        android:visibility="gone" />

</RelativeLayout><!-- From: file:/Users/jenkins/workspace/AndroidSDKReleaseBuild/mcommerce/sdk_mcom/src/main/res/layout/visa_answer_list_item.xml -->