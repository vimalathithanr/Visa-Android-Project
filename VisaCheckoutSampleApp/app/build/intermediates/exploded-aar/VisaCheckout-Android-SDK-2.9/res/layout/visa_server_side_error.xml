<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/ten_px">

    <ImageView
        android:id="@+id/ivErrorIcon"
        android:layout_marginLeft="@dimen/layout_margin_left_right"
        android:layout_width="@dimen/forty_px"
        android:layout_height="@dimen/forty_px"
        android:src="@drawable/error_icon"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tvServerSideError_Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/layout_margin_left_right"
        android:textColor="@color/server_side_error_color"
        android:layout_toRightOf="@id/ivErrorIcon"
        android:layout_marginLeft="@dimen/twenty_px"
        android:layout_alignTop="@+id/ivErrorIcon"
        android:visibility="gone"
        android:textSize="@dimen/pl_twelve_px_sp"
        android:layout_centerVertical="true"
        android:text="This is a server side error" />

</RelativeLayout>
